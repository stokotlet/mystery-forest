{
	"compilerOptions": {
		"target": "es5",
		"module": "CommonJS",
		"lib": [
			"es2017",
			"es7",
			"es6",
			"dom"
		],
		"outDir": "build",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"build",
		"src/tests"
	],
}